# Telegram Bot Configuration
TELEGRAM_TOKEN=

# OpenRouter / Ollama Configuration
OPENAI_API_KEY=sk-...
OPENAI_BASE_URL=https://openrouter.ai/api/v1
MODEL_TEXT=openai/gpt-oss-20b:free
MODEL_IMAGE=qwen/qwen2.5-vl-32b-instruct

# Ollama Configuration
#OPENAI_API_KEY=ollama
#OPENAI_BASE_URL=http://IP:11434/v1
#MODEL_TEXT=gpt-oss:20b
#MODEL_IMAGE=qwen3-vl:8b-instruct

# System Prompts
# Пути к файлам с промптами (относительно корня проекта)
SYSTEM_PROMPT_TEXT_PATH=prompts/system_prompt_text.txt
SYSTEM_PROMPT_IMAGE_PATH=prompts/system_prompt_image.txt

# Speech-to-Text (Voice transcription)
# Провайдер распознавания речи: openai | faster_whisper
STT_PROVIDER=openai
# Язык распознавания (ISO 639-1)
STT_LANGUAGE=ru

# OpenAI Whisper API через OpenRouter (если используете OpenAI для STT)
# Можно использовать другой ключ/базовый URL для аудио, отличные от LLM
# OPENAI_STT_API_KEY=sk-or-...
OPENAI_AUDIO_BASE_URL=https://openrouter.ai/api/v1
STT_OPENAI_MODEL=openai/whisper-1

# Альтернатива: прямой OpenAI endpoint (если audio.transcriptions недоступен у провайдера)
# OPENAI_AUDIO_BASE_URL=https://api.openai.com/v1
# STT_OPENAI_MODEL=whisper-1

# faster-whisper (локально)
# STT_LOCAL_MODEL=small
